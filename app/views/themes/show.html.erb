<div class="show-nav">
    <%= link_to themes_path, class: 'btn btn-default' do %>
        <i class="fa fa-chevron-circle-left"></i> <br/>Back
    <% end %>
    <%= link_to themes_path, class: 'btn btn-success disabled' do %>
        <i class="fa fa-clipboard"></i> <br/>Copy
    <% end %>
    <% if @theme.user == current_user %>
        <%= link_to edit_theme_path(@theme), class: 'btn btn-default' do %>
            <i class="fa fa-cogs"></i>
            <br>Settings
        <% end %>
    <% end %>
    <button type="button" onClick="history.go(0)" class="btn btn-warning">
        <i class="fa fa-refresh"></i>
        <br>Refresh
    </button>
</div>

