<h1 class="page-header themename">All Lorem Ipsums</h1>
<div class="row">
    <div class="col-sm-9">
        <% @themes.each do |theme| %>
            <div class="panel panel-info">
              <div class="panel-header">
                <h2 class="panel-heading"><%= link_to theme.title, theme %>
                  <a href="#" class="toggle-panel-tools pull-right">
                    <i class="fa fa-share"></i>
                  </a>
                </h2>
                <ul class="panel-tools">
                  <%= social_share_button_tag(theme.title + ": " + theme.info) %>
                </ul>
              </div>
              <div class="panel-body">
                <p><%= theme.info %></p>
              </div>
              <div class="panel-footer">
                Authored By: <em><%= link_to theme.user.name, theme.user %></em>
              </div>
            </div>
        <% end %>
    </div>

    <div class="col-sm-3">
        <div class="item-content-block">
            <%= link_to image_tag("plat.png") + "New Ipsum!", new_theme_path, class: "btn btn-outline" %>
        </div>
        <div class="item">
            <div class="item-content-block">
                <div class="block-title">Newest Ipsums</div>
            </div>
            <ol>
                <% @newest.each do |item| %>
                    <li><%= link_to item.title, item %></li>
                <% end %>

            </ol>
            <div class="item-content-block">
                <div class="block-title">Popular Keywords</div>
            </div>
            <div class="item-content-block tags">
                <% word_counter("x", 10).split.each do |topword| %>
                    <a href="#"><%= topword %></a>
                <% end %>
            </div>
        </div>
    </div>
</div>


<script>
    $('.panel-tools').hide();

$('.toggle-panel-tools').click(function(e) {
  $(this).find('.fa').toggleClass('fa-rotate-45');
  $(this).parent().next().slideToggle(200);
  e.preventDefault();
});
</script>
