<h1 class="page-header themename">All Lorem Ipsums</h1>
<div class="row">
    <div class="col-sm-9">
        <% @themes.each do |theme| %>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <strong><%= theme.title %></strong>
                </div>
                <div class="panel-footer">
                    <em>By: <%= theme.user.name %></em>
                    <br>
                    <%= truncate(theme.info, :length => 100)  %>
                    <br><br>
                        <div class="links">
                        <%= link_to 'View Ipsum', theme%>
<!--                         | <%= link_to 'Copy', '#'%> |
                        <%= link_to 'Clone', '#'%>
 -->                        <% if current_user && (theme.user == current_user) %>
                            | <%= link_to 'Edit', edit_theme_path(theme) %> |
                            <%= link_to 'Destroy', theme, method: :delete, data: { confirm: 'Are you sure?' } %>
                        <% end %>
</div>
                    <br>
                    <br>
                </div>
            </div>
            </div>
        <% end %>
    </div>

    <div class="col-sm-3">
        <div class="item-content-block">
            <%= link_to '<img src="/assets/plat.png" class="img-rounded plat-btn"><br>New Ipsum!'.html_safe, new_theme_path, class: "btn btn-outline" %>

        </div>
        <div class="item">
            <div class="item-content-block">
                <div class="block-title">Newest Ipsums</div>
            </div>
            <ol>
                <% @newest.each do |item| %>
                    <li><%= link_to item.title, "item.title" %></li>
                <% end %>

            </ol>
            <div class="item-content-block">
                <div class="block-title">Hot Keywords</div>
            </div>
            <div class="item-content-block tags">
                <% word_counter("x", 10).split.each do |topword| %>
                    <a href="#"><%= topword %></a>
                <% end %>
            </div>
        </div>
    </div>
</div>

