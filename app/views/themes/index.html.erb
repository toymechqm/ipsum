<h1 class="page-header themename">All Lorem Ipsums</h1>
<div class="row">
    <div class="col-sm-9">
        <% @themes.each do |theme| %>
            <div class="panel panel-info">
              <div class="panel-header">
                <h2 class="panel-heading"><%= link_to theme.title, theme %>
                  <a href="#" class="toggle-panel-tools pull-right">
                    <i class="fa fa-share"></i>
                  </a>
                </h2>
                <ul class="panel-tools">
                  <li><a href="#"><i class="fa fa-facebook-official fa-lg"></i></a></li>
                  <li><a href="#"><i class="fa fa-pinterest fa-lg"></i></a></li>
                  <li><a href="#"><i class="fa fa-twitter fa-lg"></i></a></li>
                  <li><a href="#"><i class="fa fa-linkedin fa-lg"></i></a></li>
                  <li><a href="#"><i class="fa fa-envelope fa-lg"></i></a></li>
                  <li><a href="#"><i class="fa fa-print fa-lg"></i></a></li>
                </ul>
              </div>
              <div class="panel-body">
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque et ligula vitae nibh varius fermentum non sit amet lectus. Sed eu sollicitudin odio. Proin lectus magna, malesuada a tempor eu, porta ut augue. </p>
              </div>
              <div class="panel-footer">
                Panel footer
              </div>
            </div>
        <% end %>
    </div>

    <div class="col-sm-3">
        <div class="item-content-block">
            <%= link_to image_tag("plat.png") + "New Ipsum!", new_theme_path, class: "btn btn-outline" %>
        </div>
        <div class="item">
            <div class="item-content-block">
                <div class="block-title">Newest Ipsums</div>
            </div>
            <ol>
                <% @newest.each do |item| %>
                    <li><%= link_to item.title, item %></li>
                <% end %>

            </ol>
            <div class="item-content-block">
                <div class="block-title">Popular Keywords</div>
            </div>
            <div class="item-content-block tags">
                <% word_counter("x", 10).split.each do |topword| %>
                    <a href="#"><%= topword %></a>
                <% end %>
            </div>
        </div>
    </div>
</div>


<script>
    $('.panel-tools').hide();

$('.toggle-panel-tools').click(function(e) {
  $(this).find('.fa').toggleClass('fa-rotate-45');
  $(this).parent().next().slideToggle(200);
  e.preventDefault();
});
</script>
