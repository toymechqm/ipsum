<%= simple_form_for(@theme) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :info, input_html: { :rows => 3, :style => 'width: 100%' } %>
    <%= f.input :keywords, input_html: { :rows => 15, :style => 'width: 100%' } %>
    <%= f.input :percentage %>
  </div>
<br>
<div class="progress">
  <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="50"
  aria-valuemin="0" aria-valuemax="100" style="width:<%= @theme.percentage %>%">
    <%= @theme.percentage %>% <%= @theme.title %>
  </div>
</div>

<div class="progress">
  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60"
  aria-valuemin="0" aria-valuemax="100" style="width:<%= (100 - @theme.percentage) || 0 %>%">
    <%= (100 - @theme.percentage) || 0 %>% Lorem Ipsum
  </div>
</div>




  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
