<div class="row">
    <div class="col-sm-9">
        <%= simple_form_for(@theme, html: { multipart: true}) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :title %>
            <%= f.label :Banner_Image %>
            <%= f.file_field :image, class: "form-control" %>
            <%= f.input :info, input_html: { :rows => 3, :style => 'width: 100%' } %>
            <%= f.input :keywords, input_html: { :rows => 15, :style => 'width: 100%' } %>
            <%= f.input :percentage %>
          </div>
        <br>
        <div class="progress">
          <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="50"
          aria-valuemin="0" aria-valuemax="100" style="width:<%= @theme.percentage %>%">
            <%= @theme.percentage %>% <%= @theme.title %>
          </div>
        </div>

        <div class="progress">
          <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60"
          aria-valuemin="0" aria-valuemax="100" style="width:<%= (100 - @theme.percentage) %>%">
            <%= (100 - @theme.percentage) %>% Lorem Ipsum
          </div>
        </div>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
    </div>
    <div class="col-sm-3">
        <h2>Tips</h2>
        <ul>
            <li>Your <em>title</em> is displayed to other users.</li>
            <li>Tell us about your ipsum in the <em>info</em> field.</li>
            <li><em>keywords</em> are the words used to generate your ipsum.</li>
            <li>You can modify the percentage of lorem ipsum you combine.</li>
        </ul>
    </div>
</div>
